@model IEnumerable<ResumeApp.Models.Submitter>

@{
    ViewData["Title"] = "Index";
}

<h2>Resume Applicant</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.firstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.midInitial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.lastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.city)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.state)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.submitterPhone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.submitterEmail)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.midInitial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.state)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.submitterPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.submitterEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.applicantID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.applicantID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.applicantID">Delete</a> <br/>
                <a asp-area="" asp-controller="ProfSummary" asp-action="Index" asp-route-id="@item.applicantID">Prof Summary</a> |
                <a asp-area="" asp-controller="SkillSet" asp-action="Index"asp-route-id="@item.applicantID">SkillSet</a> |
                <a asp-area="" asp-controller="WorkExperience" asp-action="Index" asp-route-id="@item.applicantID">Experience</a> |
                <a asp-area="" asp-controller="Education" asp-action="Index" asp-route-id="@item.applicantID">Education</a> |
                <a asp-area="" asp-controller="Reference" asp-action="Index" asp-route-id="@item.applicantID">Reference</a>
            </td>
        </tr>
}
    </tbody>
</table>
